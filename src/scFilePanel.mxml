<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100"
	backgroundColor="#FFFFFF">
	
	<mx:Script>
		<![CDATA[

			private var _fileReference: FileReference = new FileReference;
			private var _title: String = new String;
			private var _fileName: String = new String;

		]]>
	</mx:Script>
	
	
	<mx:Canvas x="5" y="5" width="90%" height="90" backgroundColor="#F0F6FB" borderStyle="solid" borderColor="#FFFFFF" cornerRadius="10">
		<mx:Text x="10" y="10" fontFamily="Arial" fontSize="20" color="#333333" id="txtTitle" text="{data.title}"/>
		<mx:Text x="10" y="60" color="#333333" id="txtFileName" text="{data.fileName}"/>
	</mx:Canvas>
	
</mx:Canvas>
